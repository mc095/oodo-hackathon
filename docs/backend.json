{
  "entities": {
    "user": {
      "title": "User",
      "description": "A user of the application.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The user's full name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "avatarUrl": {
            "type": "string",
            "description": "URL of the user's avatar image."
        },
        "role": {
          "type": "string",
          "enum": ["Admin", "Manager", "Employee"]
        },
        "managerId": {
          "type": "string",
          "description": "The ID of the user's manager."
        }
      },
      "required": ["name", "email", "role"]
    },
    "expense": {
      "title": "Expense",
      "description": "An expense claim submitted by a user.",
      "type": "object",
      "properties": {
        "userId": {
          "type": "string",
          "description": "The ID of the user who submitted the expense."
        },
        "amount": {
          "type": "number",
          "description": "The amount of the expense."
        },
        "currency": {
            "type": "string",
            "description": "The currency of the expense."
        },
        "category": {
            "type": "string",
            "description": "The category of the expense."
        },
        "description": {
          "type": "string",
          "description": "A description of the expense."
        },
        "date": {
          "type": "string",
          "format": "date-time",
          "description": "The date of the expense."
        },
        "status": {
          "type": "string",
          "enum": ["Pending", "Approved", "Rejected"]
        },
        "vendor": {
            "type": "string",
            "description": "The vendor for the expense."
        },
        "approvers": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "userId": { "type": "string" },
                    "status": { "type": "string", "enum": ["Pending", "Approved", "Rejected"] },
                    "comment": { "type": "string" }
                },
                "required": ["userId", "status"]
            }
        }
      },
      "required": ["userId", "amount", "date", "status", "vendor", "currency", "category"]
    },
    "company": {
        "title": "Company",
        "description": "Company settings.",
        "type": "object",
        "properties": {
            "name": {
                "type": "string",
                "description": "The name of the company."
            },
            "currency": {
                "type": "string",
                "description": "The default currency for the company."
            }
        },
        "required": ["name", "currency"]
    }
  },
  "auth": {
    "providers": ["email"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/user"
      },
      "description": "Stores user profile information."
    },
    "/expenses/{expenseId}": {
      "schema": {
        "$ref": "#/entities/expense"
      },
      "description": "Stores individual expense claims."
    },
    "/companies/{companyId}": {
        "schema": {
            "$ref": "#/entities/company"
        },
        "description": "Stores company settings."
    }
  }
}
